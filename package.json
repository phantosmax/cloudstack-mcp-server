{
    "name": "cloudstack-mcp-server",
    "version": "1.0.0",
    "description": "MCP server for Apache CloudStack API",
    "type": "module",
    "main": "build/index.js",
    "bin": {
      "cloudstack-mcp-server": "build/index.js",
      "cloudstack-cli": "build/cli.js"
    },
    "scripts": {
      "build": "tsc",
      "dev": "tsx src/index.ts",
      "dev:cli": "tsx src/cli.ts",
      "start": "node build/index.js",
      "cli": "node build/cli.js",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:coverage": "jest --coverage",
      "validate": "npm run build && node scripts/validate-functions.js",
      "prepare": "npm run build"
    },
    "dependencies": {
      "@modelcontextprotocol/sdk": "^0.5.0",
      "axios": "^1.6.2",
      "dotenv": "^16.3.1"
    },
    "devDependencies": {
      "@types/jest": "^29.5.0",
      "@types/node": "^20.0.0",
      "jest": "^29.5.0",
      "ts-jest": "^29.1.0",
      "tsx": "^4.0.0",
      "typescript": "^5.0.0"
    },
    "keywords": ["mcp", "cloudstack", "api", "server"],
    "license": "MIT"
  }